{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "nodemon",
            "program": "${workspaceFolder}\\Untitled\\backend\\src\\server.js",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "${workspaceFolder}\\Untitled\\backend\\node_modules\\.bin\\nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Attach to Chrome",
            "port": 8080,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: dev (frontend)",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}\\Untitled\\frontend"
        }
    ],
    "compounds": [
        {
            "name": "Start Backend and Frontend",
            "configurations": [
                "nodemon",
                "Run Script: dev (frontend)"
            ]
        }
    ]
}